PKG_CFLAGS = -I$(CURDIR)
PKG_LIBS = -L$(CURDIR) $(CURDIR)/serve.so
SRCDIR = $(CURDIR)
GO = $(shell which go)


all: serve.so $(SHLIB)

$(SHLIB) : serve.so

serve.so:
	echo $(GO) && $(GO) build -o serve.so -buildmode=c-shared $(SRCDIR)/../inst/go/serve.go

clean:
	rm $(SRCDIR)/*.o $(SRCDIR)/symbols.rds